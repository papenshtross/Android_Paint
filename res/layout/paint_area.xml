<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/layout_main">
    <LinearLayout  android:id="@+id/paint_view_layout"
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:layout_weight="1"/>
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="center_horizontal"
                  android:id="@+id/paint_view_menu"
                  style="@android:style/ButtonBar">
        <ImageButton android:id="@+id/btn_brush"
                     android:focusable="true"
                     android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@android:drawable/ic_menu_edit"
                    android:text="Brush style"/>
        <ImageButton android:id="@+id/btn_color"
                     android:focusable="true"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:src="@drawable/color_picker"
                     android:text="Color"/>
        <ImageButton android:id="@+id/btn_child"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/child_mode"
                    android:text="Child mode"/>
        <ImageButton android:id="@+id/btn_undo" 
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_menu_revert"
                    android:text="Undo"/>
        <ImageButton android:id="@+id/btn_redo"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_menu_revert"
                    android:text="Redo"/>
    </LinearLayout>
</LinearLayout>